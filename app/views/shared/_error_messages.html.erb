<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力エラーが<%= @user.errors.count %>件ありました。
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="text-left"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>