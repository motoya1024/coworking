<% provide(:class_text, 'edit-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="modal-title mx-auto">ユーザー情報編集</h2>
    </div><!-- /.modal-header  -->
    <%= form_with(model: @user, url: update_info_user_path(@user), local: true, method: :patch) do |f| %>
      <div class="modal-body">
        <div class="form-group row">
          <%= f.label :name, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-2" %>
          <%= f.text_field :name, class: 'form-control col-sm-6', placeholder: "名前" %>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-2" %>
          <%= f.email_field :email, class: 'form-control col-sm-6', placeholder: "メールアドレス" %>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-2" %>
          <%= f.password_field :password, class: 'form-control col-sm-6', placeholder: "パスワード" %>
        </div>
        <div class="form-group row">
          <%= f.label :password_confirmation, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-2" %>
          <%= f.password_field :password_confirmation, class: 'form-control col-sm-6', placeholder: "パスワード再入力" %>
        </div>
      </div><!-- /.modal-body -->
      <div class="modal-footer">
        <span class="mx-auto">
          <button type="button" class="btn btn-secondary mx-3" data-dismiss="modal">
            キャンセル
          </button>
          <%= f.submit yield(:button_text), class: "btn btn-primary px-4 mx-3" %>
        </span>
      </div><!-- /.modal-footer -->
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->