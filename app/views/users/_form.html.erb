<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>
    <div class="form-group row">
      <%= f.label :name, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
      <%= f.text_field :name, class: 'form-control col-sm-6', maxlength: "50", placeholder: "名前" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
      <%= f.email_field :email, class: 'form-control col-sm-6', maxlength: "100", placeholder: "メールアドレス" %>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
      <%= f.password_field :password, class: 'form-control col-sm-6', maxlength: "20", placeholder: "パスワード" %>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
      <%= f.password_field :password_confirmation, class: 'form-control col-sm-6', maxlength: "20", placeholder: "パスワード再入力" %>
    </div>
    <%= f.submit yield(:button_text), class: "btn btn-primary offset-0 shadow mt-3 px-5 " %>
<% end %>