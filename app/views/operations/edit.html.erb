<% provide(:title, '利用状況更新') %>

<head>
  <% if @operation.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @operation.errors.full_messages.each do |message| %>
        <div class="form-error"><%= message %></div>
      <% end %>
    </ul>
  </div>
<% end %>
</head>
  
<body>
  <div class="container">
    <div class="text-center">
      
    <div class="title"><u>SEAT UPDATE</u></div>
    <div class="second-tittle">席の利用状況を編集することができます。</div>
    <div>【<%= Date.current %>(<%= %w(日 月 火 水 木 金 土)[Date.today.wday]%>)】</div>
    
    <%= form_with(model: @operation,url: operations_update_path(@operation),local: true, method: :patch) do |f| %>
      
      <div class= "row" style="display:inline-flex">
      <h3><%= f.number_field :seat, value: @operation.seat,class:"form-main",onkeydown:"return event.keyCode !== 69 && event.keyCode !== 189 && event.keyCode !== 187 && event.keyCode !== 190" %>席中
      <%= f.number_field :all_seat, value: @operation.all_seat,class:"form-main",onkeydown:"return event.keyCode !== 69 && event.keyCode !== 189 && event.keyCode !== 187 && event.keyCode !== 190"%>席利用</h3>
      </div>
      
      <div class="row justify-content-center">
       <div class="col-2"><%= f.submit "更新", class: "btn btn-update text-white btn-lg" %></div>
       <div class="col-2"><%= link_to 'キャンセル', user_path(current_user) ,class:"btn btn-cancel text-white btn-lg"%></div>
       <div class="col-2"><input type="reset" value="リセット" class="btn btn-reset btn-lg"></div>
      </div>
      
     <% end %>
    </div><!--class="text-center"-->
  </div><!--class="container"-->
</body> 