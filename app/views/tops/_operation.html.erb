<% @kado_ritsu = 100 * @operation.seat / @operation.all_seat %>
<% if @kado_ritsu <= 20 %>
  <div class="progress mt-4 shadow-lg" style="height: 50px;">
    <div class="progress-bar progress-bar-primary progress-bar-striped active prog progress-bar-animated"
         role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:20%">
       <span class="fas fa-chair d-inline lead">&nbsp;&nbsp;&nbsp;20%</span>
    </div>
  </div>
<% elsif @kado_ritsu <= 40 %>
  <div class="progress mt-4 shadow-lg" style="height: 50px;">
    <div class="progress-bar progress-bar-info progress-bar-striped active progprogress-bar-animated"
         role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
      <span class="fas fa-chair d-inline lead">&nbsp;&nbsp;&nbsp;40%</span>
    </div>
  </div>
<% elsif @kado_ritsu <= 60 %>
  <div class="progress mt-4 shadow-lg" style="height: 50px;">
    <div class="progress-bar progress-bar-success progress-bar-striped active prog progress-bar-animated"
         role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
      <span class="fas fa-chair d-inline lead">&nbsp;&nbsp;&nbsp;60%</span>
    </div>
  </div>
<% elsif @kado_ritsu <= 80 %>
  <div class="progress mt-4 shadow-lg" style="height: 50px;">
    <div class="progress-bar progress-bar-warnig progress-bar-striped active prog progress-bar-animated"
         role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%">
      <span class="fas fa-chair d-inline lead">&nbsp;&nbsp;&nbsp;80%</span>
    </div>
  </div>
<% else @kado_ritsu <= 100 %>
  <div class="progress mt-4 shadow-lg" style="height: 50px;">
    <div class="progress-bar progress-bar-danger progress-bar-striped active prog progress-bar-animated"
         role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
      <span class="fas fa-chair d-inline lead">&nbsp;&nbsp;&nbsp;100%</span>
    </div>
  </div>
<% end %>
