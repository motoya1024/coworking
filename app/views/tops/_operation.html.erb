<% @kado_ritsu = 100 * @operation.seat / @operation.all_seat %>
<% if @kado_ritsu <= 20 %>
  <div class="progress">
    <div class="progress-bar progress-bar-primary progress-bar-striped active prog"
         role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:20%">
      20%
    </div>
  </div>
<% elsif @kado_ritsu <= 40 %>
  <div class="progress">
    <div class="progress-bar progress-bar-info progress-bar-striped active prog"
         role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
      40%
    </div>
  </div>
<% elsif @kado_ritsu <= 60 %>
  <div class="progress">
    <div class="progress-bar progress-bar-success progress-bar-striped active prog"
         role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
      60%
    </div>
  </div>
<% elsif @kado_ritsu <= 80 %>
  <div class="progress">
    <div class="progress-bar progress-bar-warnig progress-bar-striped active prog"
         role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%">
      80%
    </div>
  </div>
<% else @kado_ritsu <= 100 %>
  <div class="progress">
    <div class="progress-bar progress-bar-danger progress-bar-striped active prog"
         role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
      100%
    </div>
  </div>
<% end %>
